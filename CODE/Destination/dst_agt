class dst_agent extends uvm_agent;
`uvm_component_utils(dst_agent)

	dst_monitor dst_monh;
	dst_config dst_cfg;

	function new(string name = "dst_agent",uvm_component parent);
		super.new(name,parent);
	endfunction

	function void build_phase(uvm_phase phase);
		super.build_phase(phase);
		if(!uvm_config_db #(dst_config)::get(this,"","dst_config",dst_cfg))
			`uvm_fatal(get_type_name,"getting config failed")
	
		dst_monh = dst_monitor::type_id::create("dst_monh",this);
	endfunction


endclass
