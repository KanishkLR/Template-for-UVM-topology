class src_driver extends uvm_driver #(src_trans);
`uvm_component_utils(src_driver)

	virtual home_if.MASTER_DRV vif;
	src_config src_cfg;

	function new(string name = "src_driver",uvm_component parent);
	super.new(name,parent);
	endfunction

	function void build_phase(uvm_phase phase);

		if(!uvm_config_db #(src_config)::get(this,"","src_config",src_cfg))
		`uvm_fatal(get_type_name, "getting cfg failed")

	endfunction

	function void connect_phase(uvm_phase phase);
		vif = src_cfg.vif;
	endfunction

	task run_phase(uvm_phase phase);
		super.run_phase(phase);
		forever
			begin
			seq_item_port.get_next_item(req);
			//drive_to_dut();
			seq_item_port.item_done(req);
		end
	endtask

endclass

